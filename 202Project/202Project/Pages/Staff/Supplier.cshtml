@page
@model _202Project.Pages.Staff.SupplierModel
@{
    ViewData["Title"] = "Suppliers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>🏭 Suppliers Management</h1>
        <a asp-page="/Staff/AddSupplier" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Supplier
        </a>
    </div>

    @if (Model.Suppliers.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No suppliers found. Add your first supplier!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Supplier Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model.Suppliers)
                    {
                        <tr>
                            <td>@supplier.SupplierId</td>
                            <td>@supplier.Name</td>
                            <td>@supplier.Phone</td>
                            <td>
                                <a href="mailto:@supplier.Email">@supplier.Email</a>
                            </td>
                            <td>@supplier.Address</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-page="/Staff/EditSupplier" asp-route-id="@supplier.SupplierId"
                                       class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form method="post" asp-page-handler="Delete" class="d-inline">
                                        <input type="hidden" name="id" value="@supplier.SupplierId" />
                                        <button type="submit" class="btn btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to delete this supplier?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <a asp-page="/Staff/Dashboard">Return</a>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>
    .table th {
        font-weight: 600;
    }

    .btn-group .btn {
        border-radius: 0.25rem;
    }
</style>