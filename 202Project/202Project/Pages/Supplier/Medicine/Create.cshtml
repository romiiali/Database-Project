@page
@model PharmacySystem.Pages.Staff.Medicine.CreateModel
@{
    Layout = "_Layout";
}

<h2>Add New Medicine</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="mb-3">
                <label>Commercial Name</label>
                <input asp-for="Medicine.CommercialName" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Scientific Name</label>
                <input asp-for="Medicine.ScientificName" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Price</label>
                <input asp-for="Medicine.Price" type="number" step="0.01" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Dosage</label>
                <input asp-for="Medicine.Dosage" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Save Medicine</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>