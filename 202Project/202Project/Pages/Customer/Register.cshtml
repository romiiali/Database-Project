@page
@model PharmacySystem.Pages.Customer.RegisterModel
@{
    Layout = "_Layout";
}

<h2>Customer Registration</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="mb-3">
                <label>First Name</label>
                <input asp-for="NewCustomer.FName" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Last Name</label>
                <input asp-for="NewCustomer.LName" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Phone Number</label>
                <input asp-for="NewCustomer.Phone" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Email Address</label>
                <input asp-for="NewCustomer.Email" type="email" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Register Now</button>
        </form>
    </div>
</div>