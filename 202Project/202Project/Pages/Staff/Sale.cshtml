@page
@model _202Project.Pages.Staff.SaleModel
@{
}
<style>
    .page-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 25px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

    .page-title {
        color: #2c3e50;
        margin-bottom: 30px;
        font-size: 2.2rem;
        font-weight: bold;
        text-align: center;
        padding-bottom: 15px;
        border-bottom: 3px solid #e74c3c;
    }

    .add-button {
        display: inline-block;
        margin-bottom: 25px;
        padding: 12px 25px;
        background: #e74c3c;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .add-button:hover {
        background: #c0392b;
        transform: translateY(-2px);
        box-shadow: 0 6px 10px rgba(0,0,0,0.15);
        text-decoration: none;
        color: white;
    }

    .sales-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }

    .sales-table thead {
        background: #e74c3c;
        color: white;
    }

    .sales-table th {
        padding: 18px 15px;
        text-align: left;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .sales-table td {
        padding: 15px;
        border-bottom: 1px solid #eee;
        color: #333;
    }

    .sales-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
    }

    .view-btn {
        padding: 8px 16px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }

    .view-btn:hover {
        background: #2980b9;
        text-decoration: none;
        color: white;
    }

    .delete-form {
        display: inline;
    }

    .delete-btn {
        padding: 8px 16px;
        background: #2c3e50;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .delete-btn:hover {
        background: #1a252f;
    }

    .sale-id {
        font-weight: 600;
        color: #e74c3c;
    }

    .sale-time {
        color: #7f8c8d;
        font-size: 0.9rem;
    }
</style>

<div class="page-container">
    <h1 class="page-title">Sales Transactions</h1>

    <a asp-page="/Staff/AddSale" class="add-button">
        <i class="fas fa-cash-register"></i> Create New Sale
    </a>

    <table class="sales-table">
        <thead>
            <tr>
                <th>Sale ID</th>
                <th>Customer First Name</th>
                <th>Customer Last Name</th>
                <th>Customer ID</th>
                <th>Transaction Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sale in Model.Sales)
            {
                <tr>
                    <td class="sale-id">@sale.saleid</td>
                    <td>@sale.customerfname</td>
                    <td>@sale.customerlname</td>
                    <td>@sale.customerid</td>
                    <td class="sale-time">@sale.saletime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <div class="action-buttons">
                            <a asp-page="/Staff/SaleList" asp-route-id="@sale.saleid" class="view-btn">
                                <i class="fas fa-list"></i> View Details
                            </a>
                            <form method="post" asp-page-handler="Delete" class="delete-form">
                                <input type="hidden" name="id" value="@sale.saleid" />
                                <button type="submit" class="delete-btn">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="/Staff/Dashboard">Return</a>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">