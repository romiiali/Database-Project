@page
@model _202Project.Pages.Staff.Supplier.CreateModel
@{
    Layout = "_Layout";
}

<h2>Add New Supplier</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="mb-3">
                <label>Supplier Name</label>
                <input asp-for="Supplier.SupplierName" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input asp-for="Supplier.Email" type="email" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Phone</label>
                <input asp-for="Supplier.Phone" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Address</label>
                <input asp-for="Supplier.Address" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Save Supplier</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>