@page
@model _202Project.Pages.Staff.EditCustomerModel
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">✏️ Edit Customer</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" asp-for="CustomerForm.CustomerID" />

                <div class="row">
                    <div class="col-md-6">
                        <h4 class="border-bottom pb-2">Customer Information</h4>

                        <div class="mb-3">
                            <label class="form-label">First Name *</label>
                            <input asp-for="CustomerForm.FName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Last Name</label>
                            <input asp-for="CustomerForm.LName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone *</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input asp-for="CustomerForm.Phone" class="form-control" type="number" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="CustomerForm.Email" class="form-control" type="email" />
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Update Customer
                            </button>
                            <a href="/Staff/Customers" class="btn btn-secondary px-4 ms-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">