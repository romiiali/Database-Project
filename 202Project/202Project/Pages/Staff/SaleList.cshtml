@page
@model _202Project.Pages.Staff.SaleListModel
@{
}

<style>
    .sale-container {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 25px;
        border-left: 4px solid #e74c3c;
    }

    .sale-detail {
        margin: 10px 0;
        color: #333;
    }

    .sale-label {
        font-weight: bold;
        color: #2c3e50;
        margin-right: 10px;
    }

    .sale-id {
        color: #e74c3c;
        font-weight: bold;
        font-size: 1.2em;
    }

    .customer-name {
        color: #3498db;
        font-weight: 500;
    }

    .total-amount {
        color: #27ae60;
        font-weight: bold;
        font-size: 1.1em;
    }

    .status {
        display: inline-block;
        padding: 4px 10px;
        background: #f8f9fa;
        border-radius: 4px;
        font-size: 0.9em;
        font-weight: 500;
    }

    .items-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background: white;
    }

        .items-table thead {
            background: #e74c3c;
            color: white;
        }

        .items-table th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }

        .items-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
        }

        .items-table tbody tr:hover {
            background-color: #f5f5f5;
        }

    .return-link {
        display: inline-block;
        padding: 10px 20px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 20px;
    }

        .return-link:hover {
            background: #2980b9;
            text-decoration: none;
            color: white;
        }
</style>

@foreach (var sale in Model.Sales)
{
    <div class="sale-container">
        <p class="sale-detail"><span class="sale-label">ID:</span> <span class="sale-id">@sale.saleid</span></p>
        <p class="sale-detail"><span class="sale-label">CUSTOMER NAME:</span> <span class="customer-name">@sale.customerfname @sale.customerlname</span></p>
        <p class="sale-detail"><span class="sale-label">CUSTOMER ID:</span> @sale.customerid</p>
        <p class="sale-detail"><span class="sale-label">TIME:</span> @sale.saletime</p>
        <p class="sale-detail"><span class="sale-label">TOTAL AMOUNT:</span> <span class="total-amount">@sale.TotalAmount</span></p>
        <p class="sale-detail"><span class="sale-label">STATUS:</span> <span class="status">@sale.Status</span></p>
    </div>
}


<table class="items-table">
    <thead>
        <tr>
            <th>SaleItem Id</th>
            <th>Item Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ItemId</td>
                <td>@item.ItemName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Staff/Sale" class="return-link">Return</a>