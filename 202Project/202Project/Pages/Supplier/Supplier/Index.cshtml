@page
@model PharmacySystem.Pages.Staff.Supplier.IndexModel
@{
    Layout = "_Layout";
}

<h1>Suppliers</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Supplier</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SupplierList) {
        <tr>
            <td>@item.SupplierName</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
        </tr>
}
    </tbody>
</table>