@page
@model user_pages.Pages.Customer.MedicineDetailsModel
@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "Medicine Details";
}

<style>
    .details-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
    }
    
    .medicine-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px;
        border-radius: 15px;
        margin-bottom: 30px;
    }
    
    .details-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
        margin-bottom: 40px;
    }
    
    .info-card {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    
    .batch-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    
    .batch-table th {
        background: #f8f9fa;
        padding: 15px;
        text-align: left;
        color: #2c3e50;
        border-bottom: 2px solid #dee2e6;
    }
    
    .batch-table td {
        padding: 12px 15px;
        border-bottom: 1px solid #eee;
    }
    
    .related-medicines {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }
    
    .related-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.06);
        transition: transform 0.3s ease;
        text-decoration: none;
        color: inherit;
        display: block;
    }
    
    .related-card:hover {
        transform: translateY(-3px);
        text-decoration: none;
        color: inherit;
    }
    
    .stock-badge {
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .in-stock {
        background: #d4edda;
        color: #155724;
    }
    
    .low-stock {
        background: #f8d7da;
        color: #721c24;
    }
    
    .expiring {
        background: #fff3cd;
        color: #856404;
    }
    
    .btn-back {
        background: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
    }
    
    .btn-back:hover {
        background: #5a6268;
        color: white;
        text-decoration: none;
    }
</style>

<div class="details-container">
    <a href="/Customer/Dashboard" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
    
    @if (Model.Medicine != null)
    {
        <!-- Header -->
        <div class="medicine-header">
            <h1 style="margin: 0 0 10px 0;">@Model.Medicine.CommercialName</h1>
            <p style="opacity: 0.9; margin: 0; font-size: 1.1rem;">@Model.Medicine.ScientificName</p>
            <div style="margin-top: 20px; display: flex; gap: 15px; align-items: center;">
                <span style="background: rgba(255,255,255,0.2); padding: 8px 15px; border-radius: 20px;">
                    Price: <strong>$@Model.Medicine.Price.ToString("0.00")</strong>
                </span>
                <span style="background: rgba(255,255,255,0.2); padding: 8px 15px; border-radius: 20px;">
                    Category: @Model.Medicine.CategoryName
                </span>
            </div>
        </div>
        
        <!-- Details Grid -->
        <div class="details-grid">
            <!-- Main Information -->
            <div class="info-card">
                <h3 style="color: #2c3e50; margin-bottom: 20px;">Medicine Information</h3>
                
                <div style="display: grid; gap: 15px;">
                    <div>
                        <strong style="color: #7f8c8d; display: block; margin-bottom: 5px;">Scientific Name</strong>
                        <p style="margin: 0; font-size: 1.1rem;">@Model.Medicine.ScientificName</p>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Medicine.Dosage))
                    {
                        <div>
                            <strong style="color: #7f8c8d; display: block; margin-bottom: 5px;">Dosage</strong>
                            <p style="margin: 0; font-size: 1.1rem;">@Model.Medicine.Dosage</p>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Medicine.Description))
                    {
                        <div>
                            <strong style="color: #7f8c8d; display: block; margin-bottom: 5px;">Description</strong>
                            <p style="margin: 0; line-height: 1.6;">@Model.Medicine.Description</p>
                        </div>
                    }
                    
                    <div>
                        <strong style="color: #7f8c8d; display: block; margin-bottom: 5px;">Reorder Level</strong>
                        <p style="margin: 0; font-size: 1.1rem;">@Model.Medicine.RecorderQuantity units</p>
                    </div>
                </div>
            </div>
            
            <!-- Stock Information -->
            <div class="info-card">
                <h3 style="color: #2c3e50; margin-bottom: 20px;">Stock Availability</h3>
                
                @{
                    var totalStock = Model.AvailableBatches.Sum(b => b.QuantityReceived);
                    var medicineStockStatus = totalStock > 50 ? "in-stock" : totalStock > 0 ? "low-stock" : "expiring";
                    var medicineStatusText = totalStock > 50 ? "In Stock" : totalStock > 0 ? "Low Stock" : "Out of Stock";
                }
                
                <div style="text-align: center; padding: 20px 0;">
                    <div style="font-size: 3rem; font-weight: bold; color: #2c3e50; margin-bottom: 10px;">
                        @totalStock
                    </div>
                    <span class="stock-badge @medicineStockStatus">@medicineStatusText</span>
                </div>
                
                <p style="color: #7f8c8d; text-align: center; margin: 0;">
                    Total units available
                </p>
            </div>
        </div>
        
        <!-- Available Batches -->
        @if (Model.AvailableBatches.Any())
        {
            <div class="info-card">
                <h3 style="color: #2c3e50; margin-bottom: 20px;">Available Batches</h3>
                
                <table class="batch-table">
                    <thead>
                        <tr>
                            <th>Batch Number</th>
                            <th>Quantity</th>
                            <th>Arrival Date</th>
                            <th>Expiry Date</th>
                            <th>Supplier</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var batch in Model.AvailableBatches)
                        {
                            var isExpiringSoon = batch.ExpiryDate < DateTime.Now.AddMonths(3);
                            var batchStatusClass = isExpiringSoon ? "expiring" : "in-stock";
                            var batchStatusDisplay = isExpiringSoon ? "Expiring Soon" : "Available";
                            
                            <tr>
                                <td>@batch.BatchNumber</td>
                                <td>@batch.QuantityReceived</td>
                                <td>@batch.ArrivalDate.ToString("yyyy-MM-dd")</td>
                                <td>@batch.ExpiryDate.ToString("yyyy-MM-dd")</td>
                                <td>N/A</td> <!-- Supplier navigation won't work without Include -->
                                <td>
                                    <span class="stock-badge @batchStatusClass">@batchStatusDisplay</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        
        <!-- Related Medicines -->
        @if (Model.RelatedMedicines.Any())
        {
            <div class="info-card">
                <h3 style="color: #2c3e50; margin-bottom: 20px;">Related Medicines</h3>
                
                <div class="related-medicines">
                    @foreach (var medicine in Model.RelatedMedicines)
                    {
                        <a asp-page="/Customer/MedicineDetails" asp-route-id="@medicine.MedicineID" class="related-card">
                            <h4 style="margin: 0 0 10px 0; color: #2c3e50;">@medicine.CommercialName</h4>
                            <p style="color: #7f8c8d; font-size: 0.9rem; margin-bottom: 10px;">
                                @medicine.ScientificName
                            </p>
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <span style="font-weight: bold; color: #3498db;">$@medicine.Price.ToString("0.00")</span>
                                <span style="background: #f1f2f6; color: #2c3e50; padding: 5px 12px; border-radius: 15px; font-size: 0.85rem;">
                                    @medicine.CategoryName
                                </span>
                            </div>
                        </a>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="info-card">
            <h3 style="color: #e74c3c;">Medicine Not Found</h3>
            <p>The requested medicine could not be found.</p>
            <a href="/Customer/Dashboard" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    }
</div>