@page
@model _202Project.Pages.Staff.AddCustomerModel
@{
}

<form method="post" asp-page-handler="Add">
    <div class="col-md-6">
        <h4 class="border-bottom pb-2">Customer Information</h4>
        <div class="mb-3">
            <label class="form-label">First Name *</label>
            <input asp-for="CustomerForm.FName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input asp-for="CustomerForm.LName" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Phone *</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="CustomerForm.Phone" class="form-control" type="number" step="0.01" required />
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Email</label>
                <div class="input-group">
                    <input asp-for="CustomerForm.Email" class="form-control" type="email" step="0.1" />
                    <span class="input-group-text"></span>
                </div>
            </div>
            <div class="mt-4 pt-3 border-top">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-check-circle"></i> Add Customer
                </button>
                <a href="/Staff/Medicines" class="btn btn-secondary px-4 ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
     </div>
</form>