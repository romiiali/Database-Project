@page
@model user_pages.Pages.Customer.StoreInfoModel
@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "Store Information";
}

<style>
    .store-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
    }
    
    .store-header {
        text-align: center;
        margin-bottom: 50px;
    }
    
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-bottom: 50px;
    }
    
    .info-card {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        text-align: center;
        transition: transform 0.3s ease;
    }
    
    .info-card:hover {
        transform: translateY(-5px);
    }
    
    .info-icon {
        font-size: 3rem;
        color: #667eea;
        margin-bottom: 20px;
    }
    
    .hours-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    
    .hours-table td {
        padding: 12px;
        border-bottom: 1px solid #eee;
    }
    
    .hours-table tr:last-child td {
        border-bottom: none;
    }
    
    .map-container {
        margin-top: 40px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }
    
    .btn-back {
        background: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
    }
    
    .btn-back:hover {
        background: #5a6268;
        color: white;
        text-decoration: none;
    }
</style>

<div class="store-container">
    <a href="/Customer/Dashboard" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
    
    <div class="store-header">
        <h1 style="color: #2c3e50; margin-bottom: 15px;">Our Pharmacy Store</h1>
        <p style="color: #7f8c8d; font-size: 1.2rem; max-width: 800px; margin: 0 auto;">
            Your trusted partner in health and wellness. We provide quality medicines with professional service.
        </p>
    </div>
    
    <div class="info-grid">
        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <h3 style="color: #2c3e50; margin-bottom: 15px;">Location</h3>
            <p style="color: #7f8c8d; line-height: 1.6;">
                123 Pharmacy Street<br>
                Medical District<br>
                Health City, HC 12345
            </p>
        </div>
        
        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-clock"></i>
            </div>
            <h3 style="color: #2c3e50; margin-bottom: 15px;">Store Hours</h3>
            <table class="hours-table">
                <tr>
                    <td><strong>Monday - Friday</strong></td>
                    <td>8:00 AM - 10:00 PM</td>
                </tr>
                <tr>
                    <td><strong>Saturday</strong></td>
                    <td>9:00 AM - 8:00 PM</td>
                </tr>
                <tr>
                    <td><strong>Sunday</strong></td>
                    <td>10:00 AM - 6:00 PM</td>
                </tr>
                <tr>
                    <td><strong>Emergency</strong></td>
                    <td>24/7 Phone Service</td>
                </tr>
            </table>
        </div>
        
        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-phone-alt"></i>
            </div>
            <h3 style="color: #2c3e50; margin-bottom: 15px;">Contact Us</h3>
            <div style="text-align: left; max-width: 250px; margin: 0 auto;">
                <p style="margin-bottom: 10px;">
                    <i class="fas fa-phone" style="color: #667eea; width: 20px;"></i>
                    <strong>Phone:</strong> (555) 123-4567
                </p>
                <p style="margin-bottom: 10px;">
                    <i class="fas fa-envelope" style="color: #667eea; width: 20px;"></i>
                    <strong>Email:</strong> info@pharmacystore.com
                </p>
                <p>
                    <i class="fas fa-headset" style="color: #667eea; width: 20px;"></i>
                    <strong>Emergency:</strong> (555) 987-6543
                </p>
            </div>
        </div>
    </div>
    
    <div class="info-card">
        <h3 style="color: #2c3e50; margin-bottom: 20px; text-align: center;">Our Services</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-top: 20px;">
            <div style="text-align: center;">
                <i class="fas fa-prescription-bottle-alt" style="font-size: 2rem; color: #667eea; margin-bottom: 10px;"></i>
                <h4 style="color: #2c3e50; margin-bottom: 5px;">Prescription Fill</h4>
                <p style="color: #7f8c8d; font-size: 0.9rem;">Fast and accurate prescription service</p>
            </div>
            <div style="text-align: center;">
                <i class="fas fa-shipping-fast" style="font-size: 2rem; color: #667eea; margin-bottom: 10px;"></i>
                <h4 style="color: #2c3e50; margin-bottom: 5px;">Home Delivery</h4>
                <p style="color: #7f8c8d; font-size: 0.9rem;">Free delivery within city limits</p>
            </div>
            <div style="text-align: center;">
                <i class="fas fa-user-md" style="font-size: 2rem; color: #667eea; margin-bottom: 10px;"></i>
                <h4 style="color: #2c3e50; margin-bottom: 5px;">Pharmacist Consult</h4>
                <p style="color: #7f8c8d; font-size: 0.9rem;">Free consultation with licensed pharmacists</p>
            </div>
            <div style="text-align: center;">
                <i class="fas fa-heartbeat" style="font-size: 2rem; color: #667eea; margin-bottom: 10px;"></i>
                <h4 style="color: #2c3e50; margin-bottom: 5px;">Health Checks</h4>
                <p style="color: #7f8c8d; font-size: 0.9rem;">Blood pressure and basic health screenings</p>
            </div>
        </div>
    </div>
    
    <div class="map-container">
        <!-- Google Maps Embed -->
        <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.2219901290355!2d-74.00369368400567!3d40.71312937933185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a3161686b61%3A0x9e7b6c2b6c2b6c2b!2s123%20Pharmacy%20St%2C%20New%20York%2C%20NY%2010001!5e0!3m2!1sen!2sus!4v1644267890123!5m2!1sen!2sus" 
            width="100%" 
            height="400" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy">
        </iframe>
    </div>
</div>